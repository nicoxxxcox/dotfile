{
    "editor.wordWrap": "on",
    "editor.fontFamily": "'JetBrains Mono', 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.lineHeight": 17,
    "editor.fontLigatures": true,
    "editor.hover.enabled": false,
    "editor.wordWrapColumn": 180,
    "editor.columnSelection": false,
    "editor.tabSize": 2,
    "editor.formatOnSaveMode": "modifications",
    "editor.bracketPairColorization.enabled": true,
    //"editor.renderWhitespace": "all", // add dots to visualize spaces
    "editor.smoothScrolling": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.scale": 3,
    "editor.minimap.maxColumn": 15,
    "editor.minimap.enabled": false,
    "editor.tokenColorCustomizations": // custom tuning override of default Dark+ theme
    {
        "[Default Dark+]": {
            "textMateRules": [
                {
                    "name": "Comments",
                    "scope": "comment",
                    "settings": {
                        "foreground": "#7ba094",
                        "fontStyle": "italic"
                    }
                },
                {
                    "name": "Functions",
                    "scope": [
                        "entity.name.function",
                        "meta.selector.css entity.name.tag",
                        "entity.name.method - source.java"
                    ],
                    "settings": {
                        "foreground": "#26c190",
                        "fontStyle": "italic bold"
                    }
                },
                {
                    "name": "Css classes",
                    "scope": "meta.selector.css",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "name": "Storage",
                    "scope": "storage.type.js",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "name": "Attributes HTML",
                    "scope": "entity.other.attribute-name.html , meta.attribute",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "name": "text HTML",
                    "scope": "text.html.derivative",
                    "settings": {}
                }
            ]
        }
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.startupEditor": "none",
    "explorer.copyRelativePathSeparator": "/", // replace on Windows antisplash chars when copy relatives paths
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.fontSize": 13,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": false, // see or not .git folder
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "venv": true,
        "*.sublime-*": true,
        "env*": false // see or not .git folder
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/env": true,
        "**/venv": true
    },
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.triggerExpansionOnTab": true,
    "debug.showInlineBreakpointCandidates": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "telemetry.telemetryLevel": "off",
    "git.ignoreMissingGitWarning": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "gulp.autoDetect": "on",
    "diffEditor.ignoreTrimWhitespace": false,
    "http.systemCertificates": false,
    "typescript.inlayHints.parameterNames.enabled": "all",
}