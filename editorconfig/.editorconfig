# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true


# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,scss,css,html}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true